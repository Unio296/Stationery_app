<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= render 'layouts/rails_default' %>                                        <%#headerタグパーシャル挿入%>
    <%= render 'layouts/shim' %>                                                 <%#IE9以下用shimパーシャル挿入%>
  </head>
  <body>
    <%= render 'layouts/header' %>                                               <%#headerパーシャル挿入%>
    <div class="container">
      <% flash.each do |message_type, message| %>                                <%#flash挿入部%>
        <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
      <% end %>
      <%= yield %>                                                               <%#本文挿入%>
      <%= render 'layouts/footer' %>                                             <%#フッターパーシャル挿入%>
      <%= debug(params) if Rails.env.development? %>                             <%#開発環境の場合デバッグ情報表示%>
    </div>
  </body>
</html>